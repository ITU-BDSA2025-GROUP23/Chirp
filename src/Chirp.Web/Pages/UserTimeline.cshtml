@page "/{author}"
@model Chirp.Web.Pages.UserTimelineModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div class="container mt-4">
    <h2>@Model.AuthorName's Timeline</h2>
    <h3>Following @Model.FollowingCount | Followers @Model.FollowersCount
    </h3>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps list-unstyled">
            @foreach (var cheep in Model.Cheeps)
            {
                <li class="mb-3 border-bottom pb-2">
                    <p class="mb-1">
                        <strong><a href="/@cheep.AuthorName">@cheep.AuthorName</a></strong>
                        @cheep.Text
                        <small class="text-muted">— @cheep.TimeIso</small>
                    </p>
                </li>
            }
        </ul>

        <nav class="pager" style="margin-top:1rem">
            @if (Model.CurrentPage > 1)
            {
                <a href="/@Model.AuthorName?p=@(Model.CurrentPage - 1)">« Previous</a>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a style="margin-left:1rem" href="/@Model.AuthorName?p=@(Model.CurrentPage + 1)">Next »</a>
            }
        </nav>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>