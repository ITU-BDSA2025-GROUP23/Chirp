@page "/FollowingTimeline"
@model Chirp.Web.Pages.FollowingTimelineModel
@using System.Linq
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div class="container mt-4">
    <div class="behind-headline">
        <h2>Following Timeline</h2>
    </div>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps list-unstyled">
            @foreach (var cheep in Model.Cheeps)
            {
                <li id="cheep-@cheep.Id" class="mb-3 border-bottom pb-2">
                    <div class="d-flex align-items-center">
                        <strong>
                            <a href="/@cheep.AuthorName">@cheep.AuthorName</a>
                        </strong>
                        @if (User.Identity?.IsAuthenticated == true && User.Identity.Name != cheep.AuthorName)
                        {
                            <form method="post" asp-page-handler="Unfollow" class="ms-2">
                                <input type="hidden" name="authorName" value="@cheep.AuthorName"/>
                                <button type="submit" class="btn btn-outline-danger btn-sm follow-btn"
                                        style="color: rebeccapurple; border-color: rebeccapurple;">
                                    Unfollow
                                </button>
                            </form>
                            
                            bool isLiked = Model.CurrentUser != null &&
                                           Model.CurrentUser.Liked.Any(l => l.CheepId == cheep.Id);   
                                <div style="margin-top:4px;">
                                    <form method="post"
                                asp-page-handler="Liked"
                                class="ms-2"
                                style="display:inline-flex; align-items:center; gap:6px;">

                                    <input type="hidden" name="id" value="@cheep.Id"/>

                                    <button class="bball-like" title="Like" type="submit">
                                    <span class="@(isLiked ? "bball-liked" : "bball")"></span>
                                    </button>

                                    <span class="like-text">
                                    @(isLiked ? "Unlike" : "Like")
                                    </span>
                                </form>
                                </div>
                        }
                    </div>
                    <p class="mb-1">
                        @cheep.Text
                        <small class="text-muted">— @cheep.TimeIso</small>
                    </p>
                </li>


            }
        </ul>

        <nav class="pager" style="margin-top:1rem">
            @if (Model.CurrentPage > 1)
            {
                <a href="@(Url.Page("/Public", new { p = Model.CurrentPage - 1 }))">« Previous</a>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a style="margin-left:1rem"
                   href="@(Url.Page("/Public", new { p = Model.CurrentPage + 1 }))">Next »</a>
            }
        </nav>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>